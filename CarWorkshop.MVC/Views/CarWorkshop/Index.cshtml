@model IEnumerable<CarWorkshop.Application.CarWorkshop.CarWorkshopDto>

@{
    ViewData["Title"] = "Car Workshops";
}

<div class="float-end">
	<p>
	<a asp-action="Create">
		<svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-plus-square-fill" viewBox="0 0 16 16">
			<path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm6.5 4.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3a.5.5 0 0 1 1 0z"/>
		</svg>
	</a>
</p>
</div>
<h1>Car Workshops</h1>


<div class="row">
	@foreach (var item in Model)
	{
		<div class="card m-3" style="width: 17rem;">
			<div class="card-body">
				<h5 class="card-title">@item.Name</h5>
				<h6 class="card-subtitle mb-2 text-muted">@item.PhoneNumber</h6>
				<p class="card-text">@item.Description</p>
				<a asp-controller="CarWorkshop" asp-action="Details" class="btn btn-primary " asp-route-encodedName="@item.EncodedName">Details</a>
				@if (item.isEditable)
				{
					<a asp-controller="CarWorkshop" asp-action="Edit" class="btn btn-outline-secondary " asp-route-encodedName="@item.EncodedName">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
						<path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
						<path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
					</svg>
					<span class="align-middle">Edit</span>
				</a>
				}
			</div>
		</div>
	}
</div>
